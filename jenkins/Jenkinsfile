// Define the build trigger for polling SCM every 2 minutes
properties([
    pipelineTriggers([
        pollSCM('H/2 * * * *')
    ])
])

node {
    // Stage: checkout
    stage('Checkout') {
        checkout scm
    } 
    // Stage: Build
    stage('Build') {
        docker.image('python:2-alpine').inside {
            sh 'python -m py_compile sources/add2vals.py sources/calc.py'
        }
    }
    
    // Stage: Test
    stage('Test') {
        docker.image('qnib/pytest').inside {
            try {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            } finally {
                junit 'test-reports/results.xml'
            }
        }
    }

    // Stage: Deploy
    stage('Deploy') {
        docker.image('python:2-alpine').inside('-p 5000:5000') {  // Added port mapping
            try {
                // Archive the compiled files
                archiveArtifacts artifacts: 'sources/*.py*', fingerprint: true
                
                // Deploy step with port configuration
                sh '''
                    echo "Deploying application on port 5000..."
                    export PORT=5000
                    # Add your deployment commands here
                    python sources/calc.py
                '''
                
                echo 'Application deployed and running on http://localhost:5000'
                
                // Optional: Add input step for manual verification
                input message: 'Application is deployed on port 5000. Verified working?'
                
            } catch (error) {
                currentBuild.result = 'FAILURE'
                throw error
            } finally {
                // Cleanup or post-deployment tasks
                sh 'echo "Deployment stage completed"'
            }
        }
    }
}